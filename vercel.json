{
  "version": 2,
  "name": "family-meal-planner",
  "buildCommand": "npm run vercel-build",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "functions": {
    "server.js": {
      "includeFiles": "client/build/**"
    }
  },
  "installCommand": "npm install && npm run install-client"
}
